<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

    <!-- כל העיצוב בתוך LinearLayout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- תמונת המסעדה -->
        <ImageView
            android:id="@+id/ivRes"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_launcher_background"
        />

        <!-- פרטי המסעדה - טקסטים -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- שם המסעדה -->
            <TextView
                android:id="@+id/txtRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <!-- סוג האוכל -->
            <TextView
                android:id="@+id/txtRestaurantCuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuisine Type"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <!-- כתובת המסעדה -->
            <TextView
                android:id="@+id/txtRestaurantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <!-- טלפון -->
            <TextView
                android:id="@+id/txtRestaurantPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <!-- מאכלים ללא גלוטן -->
            <TextView
                android:id="@+id/txtGlutenFreeItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten Free Items"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <!-- קישור לאתר -->
            <TextView
                android:id="@+id/txtRestaurantDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:autoLink="web"/>

            <!-- כפתור לצפייה בפרטי המסעדה -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"/>

            <!-- שדה דירוג - כוכבים -->
            <RatingBar
                android:id="@+id/restaurantRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
            android:stepSize="0.1"
                android:isIndicator="true"/>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
