<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#FFE8BB">

    <!-- כותרת של שם המסעדה -->
    <TextView
        android:id="@+id/txtRestaurantNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- כותרת "צרו קשר:" -->

    <!-- כותרת "בקרו אצלנו:" -->

    <!-- לינק לאתר -->
    <TextView
        android:id="@+id/txtContactView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:text="צרו קשר:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtCheckOurWebsite"
        app:layout_constraintEnd_toStartOf="@+id/txtCheckOurWebsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCheckOurWebsite" />

    <TextView
        android:id="@+id/txtCheckOurWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:text="בקרו אצלנו:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtContactView"
        app:layout_constraintTop_toBottomOf="@+id/txtRestaurantNameView" />

    <!-- מספר הטלפון של המסעדה -->

    <!-- כפתור חזור -->
    <TextView
        android:id="@+id/txtRestaurantDomainView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:autoLink="web"
        android:clickable="true"
        android:gravity="center"
        android:text="Website"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txtCheckOurWebsite"
        app:layout_constraintStart_toStartOf="@+id/txtCheckOurWebsite"
        app:layout_constraintTop_toBottomOf="@+id/txtCheckOurWebsite" />

    <TextView
        android:id="@+id/txtRestaurantPhoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phone Number"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtRestaurantDomainView"
        app:layout_constraintEnd_toEndOf="@+id/txtContactView"
        app:layout_constraintStart_toStartOf="@+id/txtContactView"
        app:layout_constraintTop_toTopOf="@+id/txtRestaurantDomainView" />

    <!-- תמונה של המסעדה -->
    <Button
        android:id="@+id/btnBackView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#6C9182"
        android:text="חזור"
        app:layout_constraintBottom_toTopOf="@+id/ivResViewDetails"
        app:layout_constraintEnd_toEndOf="@+id/ivResViewDetails"
        app:layout_constraintStart_toStartOf="@+id/ivResViewDetails" />

    <ImageView
        android:id="@+id/ivResViewDetails"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_details_to_dishes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_view_details_to_dishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6C9182"
        android:text="מנות המסעדה"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- מאכלים ללא גלוטן -->

</androidx.constraintlayout.widget.ConstraintLayout>
