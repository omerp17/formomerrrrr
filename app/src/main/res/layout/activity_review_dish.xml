<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="24dp">

    <!-- כפתור חזרה -->

    <!-- שם המנה -->

    <!-- שם המסעדה -->

    <!-- כוכבי דירוג אינטראקטיביים -->

    <!-- כפתור שלח דירוג -->

    <Button
        android:id="@+id/btnBackToShowDishesFromReview"
        android:layout_width="84dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#E0E0E0"
        android:elevation="4dp"
        android:text="←"
        android:textColor="#333333"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDishNameInReviewPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDishNameInReviewPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="72dp"
        android:text="שם המנה"
        android:textColor="#212121"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ratingBarDish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackToShowDishesFromReview" />

    <RatingBar
        android:id="@+id/ratingBarDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="455dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDishNameInReviewPage" />

    <Button
        android:id="@+id/btnSendReviewsDish"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="#6C9182"
        android:text="שלח דירוג"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarDish" />

</androidx.constraintlayout.widget.ConstraintLayout>
